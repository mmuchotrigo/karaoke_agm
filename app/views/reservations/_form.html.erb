<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :salas_id %>
  <%= error_span(@reservation[:salas_id]) %>
  <%= f.input :clients_id %>
  <%= error_span(@reservation[:clients_id]) %>
  <%= f.input :date_time %>
  <%= error_span(@reservation[:date_time]) %>
  <%= f.input :about %>
  <%= error_span(@reservation[:about]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>

<%= simple_form_for @tipo_usuario, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@tipo_usuario[:name]) %>
    <%= f.input :descripcion %>
  <%= error_span(@tipo_usuario[:descripcion]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tipo_usuarios_path, :class => 'btn btn-default' %>
<% end %>

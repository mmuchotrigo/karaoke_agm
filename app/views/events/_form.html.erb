<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date_time %>
    <%= f.input :capacity %>
    <%= f.input :about %>
    <%= f.association :locals %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

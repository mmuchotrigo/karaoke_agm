<%= simple_form_for @local, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :label => "Nombre", autofocus: true %>
  <%= error_span(@local[:name]) %>
  <%= f.input :address, :label => "Dirección" %>
  <%= error_span(@local[:address]) %>
  <%= f.input :phone , :label => "Teléfono de Reserva" %>
  <%= error_span(@local[:phone]) %>
  <%= f.input :email , :label => "Correo electrónico" %>
  <%= error_span(@local[:email]) %>
  <%= f.input :description , :label => "Descripción general" %>
  <%= error_span(@local[:description]) %>
  <%= f.association :manager , :label => "Administrador" %>
  <%= error_span(@local[:manager]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locals_path, :class => 'btn btn-default' %>
<% end %>

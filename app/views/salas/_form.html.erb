<%= simple_form_for @sala, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@sala[:name]) %>
  <%= f.input :capacity %>
  <%= error_span(@sala[:capacity]) %>
  <%= f.input :description %>
  <%= error_span(@sala[:description]) %>
  <%= f.association :local %>
  <%= error_span(@sala[:local]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                salas_path, :class => 'btn btn-default' %>
<% end %>

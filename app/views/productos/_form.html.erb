<%= simple_form_for @producto, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@producto[:name]) %>
  <%= f.input :price %>
  <%= error_span(@producto[:price]) %>
  <%= f.input :available %>
  <%= error_span(@producto[:available]) %>
  <%= f.association :category %> 
   <%= error_span(@producto[:category]) %>

  <%= f.button :submit, 'Crear Producto', :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                productos_path, :class => 'btn btn-default' %>
<% end %>
